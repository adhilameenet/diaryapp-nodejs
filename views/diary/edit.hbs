{{> header}}
<div class="container">
    <a class="mt-3 btn btn-outline-primary" href="/dashboard">Back</a>
    <form class="mt-3" action="/diary/edit/{{diary._id}}" method="post" autocomplete="off">
        <h4 class="fw-bold">Edit Diary</h4>
        <div class="form-group mb-1 w-25">
            <label for="date">Date</label>
            <input type="date" value="{{ formatedDate }}" id="editDate" class="form-control" id="date" name="date" required>
        </div>
        <div class="form-group">
            <label for="content">Diary</label>
            <textarea class="form-control mb-3" id="content" rows="8" name="content" required>{{diary.markdown}}</textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-success w-100" type="submit">Save Changes</button>
        </div>
    </form>
</div>