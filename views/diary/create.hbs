{{> header}}

<div class="container">
    <a class="mt-3 btn btn-outline-primary" href="/dashboard">Back</a>
    <form class="mt-3" action="/diary/create" method="post" autocomplete="off">
        <div class="form-group mb-1 w-25">
            <label for="exampleFormControlInput1">Date</label>
            <input type="date" class="form-control" id="exampleFormControlInput1" name="ddate" required>
        </div>
        <div class="form-group mb-1">
            <label for="exampleFormControlInput1">Title</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" name="dtitle" required>
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Diary</label>
            <textarea class="form-control mb-3" id="exampleFormControlTextarea1" rows="8" name="dcontent" required>
            </textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-success w-100" type="submit">Save</button>
        </div>
    </form>
</div>