{{> header}}
<div class="container">
    <a class="mt-3 btn btn-outline-primary" href="/dashboard">Back</a>
    <form class="mt-3" action="/diary/create" method="post" autocomplete="off">
        <div class="form-group mb-1 w-25">
            <label for="date">Date</label>
            <input type="date" class="form-control" id="date" name="date" required>
        </div>
        <div class="form-group">
            <label for="content">Diary</label>
            <textarea class="form-control mb-3" id="content" rows="8" name="content" required></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-success w-100" type="submit">Save</button>
        </div>
    </form>
</div>