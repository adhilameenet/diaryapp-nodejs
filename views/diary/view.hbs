{{> header}}
<div class="container">
    <a class="mt-3 btn btn-outline-primary" href="/dashboard">Back</a>
    <form class="mt-4">
        <h5 class="">{{diary.date}}</h5>
        <div class="form-group mb-1">
            <label for="title">Title</label>
            <input type="text" value="{{diary.title}}" class="form-control" id="title" readonly>
        </div>
        <div class="form-group">
            <label for="content">Diary</label>
            <textarea class="form-control mb-3" id="content" rows="8" readonly>{{diary.content}}</textarea>
        </div>
    </form>
</div>